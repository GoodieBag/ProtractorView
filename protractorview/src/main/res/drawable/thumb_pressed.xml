<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger blue circle in back -->
    <item>
        <shape android:shape="oval">
            <stroke android:color="@color/default_blue_light" android:width="1dp"/>
            <solid android:color="@color/default_blue_light_teans"/>
            <size
                android:width="15dp"
                android:height="15dp"/>
        </shape>
    </item>
    <!-- Smaller red circle in front -->
    <item>
        <shape android:shape="oval">
            <!-- transparent stroke = larger_circle_size - smaller_circle_size -->
            <stroke android:color="@android:color/transparent"
                android:width="7dp"/>
            <solid android:color="@color/default_blue_light"/>
            <size
                android:width="8dp"
                android:height="8dp"/>
        </shape>
    </item>
</layer-list>